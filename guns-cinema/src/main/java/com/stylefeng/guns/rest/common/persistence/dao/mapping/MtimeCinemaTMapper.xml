<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.MtimeCinemaTMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimeCinemaT">
        <id column="UUID" property="uuid" />
        <result column="cinema_name" property="cinemaName" />
        <result column="cinema_phone" property="cinemaPhone" />
        <result column="brand_id" property="brandId" />
        <result column="area_id" property="areaId" />
        <result column="hall_ids" property="hallIds" />
        <result column="img_address" property="imgAddress" />
        <result column="cinema_address" property="cinemaAddress" />
        <result column="minimum_price" property="minimumPrice" />
    </resultMap>
    <resultMap id="AreaMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimeAreaDictT">
        <id column="UUID" property="areaId"/>
        <id column="show_name" property="areaName"/>
        <!--<id column="active" property="active"/>-->
    </resultMap>
    <select id="getAreaConditionList" resultMap="AreaMap">
        SELECT UUID,show_name FROM `mtime_brand_dict_t`;
    </select>

    <resultMap id="BrandMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimeBrandDictT">
        <id column="UUId" property="brandId"/>
        <id column="show_name" property="brandName"/>
        <!--<id column="active" property="active"/>-->
    </resultMap>
    <select id="getBrandConditionList" resultMap="BrandMap">
        SELECT UUID,show_name FROM `mtime_area_dict_t`;
    </select>
    <resultMap id="HallMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimeHallDictT">
        <id column="UUID" property="halltypeId"/>
        <id column="show_name" property="halltypeName"/>
        <id column="seat_address" property="seatAddress"/>
        <!--<id column="active" property="active"/>-->
    </resultMap>
    <select id="getHallCondition" resultMap="HallMap">
        SELECT uuid,show_name,seat_address FROM `mtime_hall_dict_t`;
    </select>

</mapper>
